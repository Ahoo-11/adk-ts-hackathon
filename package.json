{
  "name": "weatherwise-mcp",
  "version": "0.1.0",
  "private": true,
  "description": "WeatherWise MCP: Smart Weather Data Integration server built with TypeScript. Multi-source weather data, insights, and alerts via MCP.",
  "type": "module",
  "bin": {
    "weatherwise-mcp": "dist/cli.js"
  },
  "engines": {
    "node": ">=20.11"
  },
  "scripts": {
    "dev:mcp": "tsx src/server.ts",
    "dev:http": "tsx src/server.ts",
    "dev:cli:stdio": "tsx src/cli.ts --transport=stdio",
    "dev:cli:http": "tsx src/cli.ts --transport=http --port 3000",
    "build": "tsc",
    "start:mcp": "node dist/server.js",
    "start:http": "node dist/server.js",
    "start:cli:stdio": "node dist/cli.js --transport=stdio",
    "start:cli:http": "node dist/cli.js --transport=http --port 3000"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@iqai/adk": "^0.3.0",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "lru-cache": "^11.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.7.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  }
}